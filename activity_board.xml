<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/camera"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="12dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="177dp"
                    android:layout_height="31dp"
                    android:text="추억이 방울방울"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="118dp"
                    tools:layout_editor_absoluteY="23dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="내 강아지 자랑하기 ⸜(♡'ᗜ'♡)⸝"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="65dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:padding="5dp">


            <Button
                android:id="@+id/btnBoard"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="자유 게시판"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:backgroundTint="#F2E2E2"
                android:fontFamily="@font/main_font"
                app:layout_constraintEnd_toStartOf="@+id/btnVideo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="115dp" />

            <Button
                android:id="@+id/btnVideo"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="영상 모음"
                app:backgroundTint="#F2E2E2"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/main_font"
                app:layout_constraintEnd_toStartOf="@+id/btnMyInfo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnBoard"
                tools:layout_editor_absoluteY="115dp" />

            <Button
                android:id="@+id/btnMyInfo"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="내 정보"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:backgroundTint="#F2E2E2"
                android:fontFamily="@font/main_font"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnVideo"
                tools:layout_editor_absoluteY="115dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="594dp"
            android:orientation="horizontal"/>
    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="39dp"
        android:clickable="true"
        android:tint="#F2E2E2"
        app:backgroundTint="#F2E2E2"
        app:srcCompat="@android:drawable/btn_star" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>