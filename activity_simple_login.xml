<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F2E2E2"
    tools:context=".SimpleLoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/mainC"
        android:text="간편 로그인"
        android:padding="10dp"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/simplePwdBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="#F2E2E2"
        android:text="간편 비밀번호"
        android:fontFamily="@font/main_font"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/patternBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F2E2E2"
        android:text="패턴 등록"
        android:fontFamily="@font/main_font"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/simplePwdBtn"
        app:layout_constraintTop_toBottomOf="@+id/simplePwdBtn" />

    <Button
        android:id="@+id/fingerprintBtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F2E2E2"
        android:text="지문등록"
        android:fontFamily="@font/main_font"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/patternBtn"
        app:layout_constraintTop_toBottomOf="@+id/patternBtn" />

    <Button
        android:id="@+id/submitOKBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#F2E2E2"
        android:text="확인"
        android:fontFamily="@font/main_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fingerprintBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>